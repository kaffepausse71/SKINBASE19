<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
	<defaultcontrol always="true">450</defaultcontrol>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="group">
			<depth>DepthSideBlade</depth>
			<animation effect="slide" start="600,0" end="0,0" time="300" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="600,0" time="300" tween="quadratic" easing="out">WindowClose</animation>
			<control type="image">
				<left>600r</left>
				<top>0</top>
				<width>630</width>
				<height>1080</height>
				<texture border="22,0,0,0" flipx="true">HomeBladeSub.png</texture>
			</control>
			<control type="button">
				<description>Close Window button</description>
				<left>570r</left>
				<top>0</top>
				<width>96</width>
				<height>48</height>
				<label></label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus colordiffuse="theme">DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>450</onleft>
				<onright>450</onright>
				<onup>450</onup>
				<ondown>450</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			<control type="image">
				<left>555r</left>
				<top>45</top>
				<width>300</width>
				<height>300</height>
				<aspectratio align="center">keep</aspectratio>
				<fadetime>IconCrossfadeTime</fadetime>
				<texture>$INFO[ListItem.Icon]</texture>
				<bordertexture border="12">ThumbShadow.png</bordertexture>
				<bordersize>12</bordersize>
			</control>
			<control type="list" id="450">
				<left>585r</left>
				<top>375</top>
				<width>675</width>
				<height>660</height>
				<onup>450</onup>
				<onleft>Dialog.Close(Favourites)</onleft>
				<onright>60</onright>
				<ondown>450</ondown>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="60">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>555</width>
						<height>60</height>
						<texture border="8" colordiffuse="theme">button-nofocus.png</texture>
					</control>
					<control type="label">
						<left>15</left>
						<top>0</top>
						<width>525</width>
						<height>60</height>
						<font>font12_title</font>
						<align>left</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="60">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>555</width>
						<height>60</height>
						<visible>!Control.HasFocus(450)</visible>
						<texture border="4" colordiffuse="theme">button-nofocus.png</texture>
					</control>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>555</width>
						<height>60</height>
						<visible>Control.HasFocus(450)</visible>
						<texture border="4" colordiffuse="theme">button-focus.png</texture>
					</control>
					<control type="label">
						<left>15</left>
						<top>0</top>
						<width>525</width>
						<height>60</height>
						<font>font12_title</font>
						<align>left</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
			</control>
		<control type="scrollbar" id="60">
				<left>30r</left>
				<top>375</top>
				<width>25</width>
				<height>651</height>
				<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
				<texturesliderbar border="0,14,0,14">ScrollBarV_bar.png</texturesliderbar>
				<texturesliderbarfocus border="0,14,0,14" colordiffuse="theme">ScrollBarV_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus colordiffuse="theme">ScrollBarNib.png</textureslidernibfocus>
				<onleft>450</onleft>
				<onright>450</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<visible>IntegerGreaterThan(Container(450).NumItems,11)</visible>
			</control>
			<control type="label">
				<description>Page label</description>
				<right>45</right>
				<top>1035</top>
				<width>525</width>
				<height>45</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>grey</textcolor>
				<label>([COLOR=theme]$INFO[Container(450).NumItems][/COLOR]) $LOCALIZE[31025] - $LOCALIZE[31024] ([COLOR=theme]$INFO[Container(450).CurrentPage]/$INFO[Container(450).NumPages][/COLOR])</label>
			</control>
		</control>
	</controls>
</window>
