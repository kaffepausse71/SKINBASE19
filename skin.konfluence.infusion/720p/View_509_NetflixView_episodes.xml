<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Netflix_View_episodes">
		<control type="group">
			<visible>Control.IsVisible(509)</visible>
			<include>CommonBackground</include>
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="300" tween="sine" easing="out" />
				<effect type="zoom" start="125" end="100" center="auto" time="300" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="300" tween="sine" easing="out" />
				<effect type="zoom" start="100" end="125" center="auto" time="300" tween="cubic" easing="out" />
			</animation>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1280</width>
				<height>720</height>
				<aspectratio>scale</aspectratio>
				<visible>true</visible>
				<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
				<fadetime>FanartCrossfadeTime</fadetime>
			</control>
			<control type="image" description="Busy BG">
				<left>-20</left>
				<top>-20</top>
				<width>1350</width>
				<height>800</height>
				<texture>ContentPanel.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="group">
				<width>1280</width>
				<height>720</height>
				<control type="wraplist" id="509">
					<visible>true</visible>
					<left>400</left>
					<top>-185</top>
					<width>2500</width>
					<height>2000</height>
					<onleft>2</onleft>
					
					<ondown>9001</ondown>
					<orientation>vertical</orientation>
					<align>center</align>
					<focusposition>2</focusposition>
					<pagecontrol>60</pagecontrol>
					<scrolltime tween="sine" easing="out">500</scrolltime>
					<itemgap>10</itemgap>
					<include content="FlexLayout_Netflix_View_ep">
						<param name="widgetid" value="509" />
					</include>
					<viewtype label="Netflix Episodes">list</viewtype>
					
				</control>

				<!--Item 2 Group -->

<!-- 				<control type="label">
					<left>50</left>
					<top>100</top>
					<width>1920</width>
					<height>88</height>
					<font>card30</font>
					<textcolor>white</textcolor>
					<align>center</align>
					<aligny>Top</aligny>
					<wrapmultiline>true</wrapmultiline>
					<label>$INFO[ListItem.TVShowTitle]</label>
					
				</control> -->
				<control type="image">
					<left>125</left>
					<top>0</top>
					<width>150</width>
					<height>150</height>
					<aspectratio>keep</aspectratio>
					<texture>$VAR[StudioIconVar]</texture>
					<visible>Skin.HasSetting(ShowStudioLogo)</visible>
				</control> 
				<control type="image">
						<left>10</left>
						<top>290</top>
						
						<height>125</height>
						<width>400</width>
						<fadetime>200</fadetime>
						<aspectratio>keep</aspectratio>
						<texture background="true">$VAR[ClearLogoVarEpisodes]</texture>
						<visible>[Container.Content(seasons) | Container.Content(episodes)] + !Skin.HasSetting(DisableNetflixLogo)</visible>
				</control>
				<control type="image">
						<left>10</left>
						<top>290</top>
						<height>125</height>
						<width>400</width>
						<fadetime>200</fadetime>
						<aspectratio>keep</aspectratio>
						<texture background="true">$VAR[ClearLogoVar]</texture>
						<visible>[Container.Content(Movies)| Container.Content(tvshows)] + !Skin.HasSetting(DisableNetflixLogo)</visible>
				</control>
			</control>
		</control>

	</include>
</includes>




