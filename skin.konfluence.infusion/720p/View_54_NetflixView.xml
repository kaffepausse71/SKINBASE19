					<left>10</left>
					<top>35</top>
					<width>500</width>
					<height>88</height>
					<font>font16</font>
					<textcolor>grey</textcolor>
					<align>left</align>
					<aligny>Top</aligny>
					<wrapmultiline>true</wrapmultiline>
					<label>$INFO[ListItem.Genre]</label>
				</control> -->
				<control type="image">
						<left>50</left>
						<top>0</top>
						<height>125</height>
						<width>400</width>
						<fadetime>200</fadetime>
						<aspectratio>keep</aspectratio>
						<align>center</align>
						<texture background="true">$VAR[ClearLogoVar]</texture>
						<visible>Skin.HasSetting(EnableViewClearlogo)</visible>
				</control>
				<control type="label">
						<left>50</left>
						<top>25</top>
						<height>125</height>
						<width>500</width>
						<label>$INFO[ListItem.Label]</label>
						<font>font_plotNetflix</font>
						<textcolor>blue</textcolor>
						<align>justify</align>
						<visible>!Skin.HasSetting(EnableViewClearlogo)</visible>
						<autoscroll delay="2000" time="4000" repeat="5000">true</autoscroll>
				</control>
				<control type="textbox">
					<left>35</left>
					<top>135</top>
					<width>500</width>
					<height>240</height>
					<font>font_plot</font>
					<textcolor>grey</textcolor>
					<align>justify</align>
					<autoscroll delay="7000" time="4000" repeat="11000">true</autoscroll>
					<wrapmultiline>true</wrapmultiline>
					<label>$INFO[ListItem.Plot]</label>
				</control>

			<include>MediaControls</include>
		</control>

        <control type="group">
 			
			<top>400</top>
            <left>0</left>
            
            <height>700</height>
 			
			
			<control type="wraplist" id="54">
                <top>0</top>
                <left>-125</left>
                <width>2800</width>
                <height>350</height>
                <onleft>52</onleft>
                <onright>52</onright>
                <ondown>2</ondown>
                <onup>2</onup>
                <pagecontrol>5199</pagecontrol>
                <focusposition>1</focusposition>
				<itemgap>10</itemgap>
                <movement>1</movement>
                <preloaditems>2</preloaditems>
                <orientation>horizontal</orientation>
                <viewtype label="Netflix View">list</viewtype>
                <scrolltime tween="quadratic" easing="out">475</scrolltime>
                <visible>Container.Content(seasons) |Container.Content(albums) | Container.Content(artists) |  Container.Content(sets) | Container.Content(tvshows) | Container.Content(movies)</visible>
                <itemlayout height="550" width="160">
					
                    <control type="group">
                        <left>0</left>
                        <right>20</right>

                        <control type="image">
                            <left>10</left>
							<top>10</top>
                           <width>150</width>
                            <height>225</height>
                            <aspectratio>scale</aspectratio>
                            <texture fallback="DefaultVideoCover.png" colordiffuse="grey">$VAR[PosterVar]</texture>
                        </control>
						<control type="image">
							<left>53</left><!-- 665 -->
							<top>90</top>
							<width>64</width>
							<height>64</height>
							<texture>OverlayWatching.png</texture>
							<visible>Window.IsVisible(Videos) + ListItem.IsResumable</visible>
						</control>
						<control type="image">
							<left>53</left><!-- 665 -->
							<top>90</top>
							<width>64</width>
							<height>64</height>
							<texture>$INFO[ListItem.Overlay]</texture>
							<aspectratio>keep</aspectratio>
							<visible>Window.IsVisible(Videos)</visible>
						</control>

                    </control>
                </itemlayout>
                <focusedlayout height="550" width="160">
                    <control type="group">
                        <left>0</left>
                        <right>20</right>
						
                        <control type="button">
                            <left>5</left>
                            <top>5</top>
                            <width>160</width>
                            <height>235</height>
                            
                            
                        </control>
                        <control type="image">
                            <left>10</left>
							<top>10</top>

                            <width>150</width>
                            <height>225</height>
                            <aspectratio>scale</aspectratio>
                            <texture fallback="DefaultVideoCover.png">$VAR[PosterVar]</texture>
                        </control>

						<control type="image">
							<left>53</left><!-- 665 -->
							<top>90</top>
							<width>64</width>
							<height>64</height>
							<texture>OverlayWatching.png</texture>
							<visible>Window.IsVisible(Videos) + ListItem.IsResumable</visible>
						</control>
						<control type="image">
							<left>53</left><!-- 665 -->
							<top>90</top>
							<width>64</width>
							<height>64</height>
							<texture>$INFO[ListItem.Overlay]</texture>
							<aspectratio>keep</aspectratio>
							<visible>Window.IsVisible(Videos)</visible>
						</control>				
                    </control>
                </focusedlayout>
            </control>
        </control>
    </include>
</includes>
