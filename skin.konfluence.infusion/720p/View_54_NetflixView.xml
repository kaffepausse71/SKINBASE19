<?xml version="1.0" encoding="UTF-8"?>

<includes>
    <include name="View_54_NetflixView">
		<control type="group">
           <visible>Control.IsVisible(54)</visible>
			<include>CommonBackground</include>

			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="300" tween="sine" easing="out" />
				<effect type="zoom" start="125" end="100" center="auto" time="300" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="300" tween="sine" easing="out" />
				<effect type="zoom" start="100" end="125" center="auto" time="300" tween="cubic" easing="out" />
			</animation>
			<control type="image">
				<left>500</left>
				<top>0</top>
				
				<height>430</height>
				
				<aspectratio>scale</aspectratio>
				<visible>true</visible>
				<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
				
				<fadetime>FanartCrossfadeTime</fadetime>
				
			</control>

			<control type="image" description="Busy BG">
				<left>-10</left>
				<top>-20</top>
				<width>1350</width>
				<height>800</height>
				<texture>special://skin/media/netflixshadow.png</texture>
				<aspectratio>stretch</aspectratio>
			</control> 
				<control type="label">
					<left>0</left>
					<top>670</top>
					<width>1280</width>
					<height>88</height>
					<font>font16</font>
					<textcolor>white</textcolor>
					<align>center</align>
					<aligny>Top</aligny>
					<wrapmultiline>true</wrapmultiline>
					<label>$INFO[Listitem.Label]</label>
					
				</control>
				<control type="image">
					<left>30</left>
					<top>670</top>
					<width>128</width>
					<height>35</height>
					<aspectratio>keep</aspectratio>
					<texture>$VAR[ratingstars,flagging/ratingstars/stars,.png]</texture>
					<visible>String.Contains(ListItem.rating,.)</visible>
				</control>
				<control type="image">
					<left>170</left>
					<top>670</top>
					<width>80</width>
					<height>35</height>
					<aspectratio>keep</aspectratio>
					<texture>$VAR[rating,flagging/ratings/,.png]</texture>
				</control>
