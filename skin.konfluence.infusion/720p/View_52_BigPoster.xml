<?xml version="1.0" encoding="UTF-8"?>

<includes>
    <include name="View_52_BigPoster">
		<control type="group">
           <visible>Control.IsVisible(52)</visible>
			<include>CommonBackground</include>

			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="300" tween="sine" easing="out" />
				<effect type="zoom" start="125" end="100" center="auto" time="300" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="300" tween="sine" easing="out" />
				<effect type="zoom" start="100" end="125" center="auto" time="300" tween="cubic" easing="out" />
			</animation>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1920</width>
				<height>1080</height>
				<aspectratio>scale</aspectratio>
				<visible>true</visible>
				<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
				
				<fadetime>FanartCrossfadeTime</fadetime>
				
			</control>

			<control type="image" description="Busy BG">
				<left>-20</left>
				<top>-20</top>
				<width>1350</width>
				<height>800</height>
				<texture colordiffuse="9AFFFFFF">special://skin/media/busy/contentpanel4.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
				<control type="label">
					<left>0</left>
					<top>10</top>
					<width>1280</width>
					<height>88</height>
					<font>font16</font>
					<textcolor>white</textcolor>
					<align>center</align>
					<aligny>Top</aligny>
					<wrapmultiline>true</wrapmultiline>
					<label>$INFO[Listitem.Label]</label>
					
				</control>
				<control type="image">
					<left>30</left>
					<top>670</top>
					<width>128</width>
					<height>35</height>
					<aspectratio>keep</aspectratio>
					<texture>$VAR[ratingstars,flagging/ratingstars/stars,.png]</texture>
					<visible>String.Contains(ListItem.rating,.)</visible>
				</control>
				<control type="image">
					<left>170</left>
					<top>670</top>
					<width>80</width>
					<height>35</height>
					<aspectratio>keep</aspectratio>
					<texture>$VAR[rating,flagging/ratings/,.png]</texture>
				</control>
<!-- 				<control type="image">
					<left>270</left>
					<top>640</top>
					<width>85</width>
					<height>85</height>
					<aspectratio>keep</aspectratio>
					<texture>$VAR[StudioIconVar]</texture>
				</control> -->
				<control type="label">
					<left>0</left>
					<top>35</top>
					<width>1280</width>
					<height>88</height>
					<font>font16</font>
					<textcolor>blue</textcolor>
					<align>center</align>
					<aligny>Top</aligny>
					<wrapmultiline>true</wrapmultiline>
					<label>$INFO[ListItem.Genre]</label>
				</control>
				




			<include>MediaControls</include>
		</control>

        <control type="group">
 			
			<top>90</top>
            <left>93</left>
            <right>93</right>
            <height>700</height>
 			
			
			<control type="fixedlist" id="52">
                 <top>0</top>
                <left>-380</left>
                <width>2800</width>
                <height>610</height>
                <onleft>52</onleft>
                <onright>52</onright>
                <ondown>2</ondown>
                <onup>2</onup>
                <pagecontrol>5199</pagecontrol>
                <focusposition>2</focusposition>
				<itemgap>10</itemgap>
                <movement>1</movement>
                <preloaditems>2</preloaditems>
                <orientation>horizontal</orientation>
                <viewtype label="Big Posters">list</viewtype>
                <scrolltime tween="quadratic" easing="out">475</scrolltime>
                <visible>Container.Content(seasons) |Container.Content(albums) | Container.Content(artists) |  Container.Content(sets) | Container.Content(tvshows) | Container.Content(movies)</visible>
                <itemlayout height="550" width="370">
					
                    <control type="group">
                        <left>0</left>
                        <right>20</right>

                        <control type="image">
                            <left>10</left>
							<top>10</top>

                            <width>354</width>
                            <height>525</height>
                            <aspectratio>scale</aspectratio>
                            <texture fallback="DefaultVideoCover.png" colordiffuse="grey">$VAR[PosterVar]</texture>
                        </control>
						<control type="image">
							<left>25</left><!-- 665 -->
							<top>25</top>
							<width>64</width>
							<height>64</height>
							<texture>OverlayWatching.png</texture>
							<visible>Window.IsVisible(Videos) + ListItem.IsResumable</visible>
						</control>
						<control type="image">
							<left>25</left><!-- 665 -->
							<top>25</top>
							<width>64</width>
							<height>64</height>
							<texture>$INFO[ListItem.Overlay]</texture>
							<aspectratio>keep</aspectratio>
							<visible>Window.IsVisible(Videos)</visible>
						</control>

                    </control>
                </itemlayout>
                <focusedlayout height="550" width="370">
                    <control type="group">
                        <left>0</left>
                        <right>20</right>
						
                        <control type="button">
                            <left>5</left>
                            <top>5</top>
                            <width>364</width>
                            <height>535</height>
                            
                            
                        </control>
                        <control type="image">
                            <left>10</left>
							<top>10</top>

                            <width>354</width>
                            <height>525</height>
                            <aspectratio>scale</aspectratio>
                            <texture fallback="DefaultVideoCover.png">$VAR[PosterVar]</texture>
                        </control>

						<control type="image">
							<left>25</left><!-- 665 -->
							<top>25</top>
							<width>64</width>
							<height>64</height>
							<texture>OverlayWatching.png</texture>
							<visible>Window.IsVisible(Videos) + ListItem.IsResumable</visible>
						</control>
						<control type="image">
							<left>25</left><!-- 665 -->
							<top>25</top>
							<width>64</width>
							<height>64</height>
							<texture>$INFO[ListItem.Overlay]</texture>
							<aspectratio>keep</aspectratio>
							<visible>Window.IsVisible(Videos)</visible>
						</control>				
                    </control>
                </focusedlayout>
            </control>
        </control>
    </include>
</includes>
