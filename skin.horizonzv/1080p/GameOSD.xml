<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">100</defaultcontrol>
    <include>openclose</include>
	<include>openclosevisible</include>
	<controls>
		<control type="group">
			<centerleft>50%</centerleft>
			<height>400</height>
			<centertop>50%</centertop>
			<width>700</width>
			<visible>!Window.IsActive(1104) + !Window.IsActive(GameVideoFilter) + !Window.IsActive(GameViewMode) + !Window.IsActive(GameControllers) + !Window.IsActive(GameVideoRotation)</visible>
			<animation effect="fade" time="200">VisibleChange</animation>
			<control type="image">
				<left>-10</left>
				<top>-10</top>
				<width>740</width>
				<height>380</height>
				<colordiffuse>$VAR[BackgroundOverlayColorDialog]</colordiffuse>
				<texture>WhiteBack.png</texture>
			</control>
            <include content="DialogInfoBackgroundParam">
                <param name="DialogBackgroundLeft" value="0" />
                <param name="DialogBackgroundTop" value="0" />
                <param name="DialogBackgroundWidth" value="720" />
                <param name="DialogBackgroundHeight" value="360" />
                <param name="DialogSeparatorTop" value="60" />
                <param name="DialogSeparatorBottom" value="360" />
                <param name="DialogShadowTop" value="1" />
                <param name="DialogHeaderLabel" value="$LOCALIZE[35221]" />
                <param name="DialogHeaderTop" value="8" />
                <param name="DialogHeaderId" value="1" />
            </include>
			<control type="group">
				<top>80</top>
				<left>10</left>
				<control type="list" id="100">
					<defaultcontrol always="true">101</defaultcontrol>
					<height>260</height>
					<orientation>vertical</orientation>
					<itemlayout condition="!Control.IsVisible(200)" width="700" height="65">
						<control type="label">
							<left>20</left>
							<width>680</width>
							<height>65</height>
							<info>ListItem.Label</info>
							<font>font13</font>
							<align>left</align>
							<aligny>center</aligny>
						</control>
						<control type="label">
							<right>20</right>
							<width>680</width>
							<height>65</height>
							<info>ListItem.Label2</info>
							<font>font13</font>
							<align>right</align>
							<aligny>center</aligny>
						</control>
					</itemlayout>
					<itemlayout condition="Control.IsVisible(200)" width="688" height="65">
						<control type="label">
							<left>20</left>
							<width>680</width>
							<height>65</height>
							<info>ListItem.Label</info>
							<font>font13</font>
							<align>left</align>
							<aligny>center</aligny>
						</control>
						<control type="label">
							<right>20</right>
							<width>680</width>
							<height>65</height>
							<info>ListItem.Label2</info>
							<font>font13</font>
							<align>right</align>
							<aligny>center</aligny>
						</control>
					</itemlayout>
					<focusedlayout condition="!Control.IsVisible(200)" width="700" height="65">
						<control type="image">
							<left>8</left>
							<top>4</top>
							<width>680</width>
							<height>60</height>
							<texture border="5">buttons/ButtonFO.png</texture>
							<visible>Control.HasFocus(100)</visible>
						</control>
						<control type="label">
							<left>20</left>
							<width>680</width>
							<height>65</height>
							<info>ListItem.Label</info>
							<font>font13</font>
							<align>left</align>
							<aligny>center</aligny>
							<textcolor>black</textcolor>
						</control>
						<control type="label">
							<right>20</right>
							<width>680</width>
							<height>65</height>
							<info>ListItem.Label2</info>
							<font>font13</font>
							<align>right</align>
							<aligny>center</aligny>
							<textcolor>black</textcolor>
						</control>
					</focusedlayout>
					<focusedlayout condition="Control.IsVisible(200)" width="688" height="65">
						<control type="image">
							<left>8</left>
							<top>4</top>
							<width>680</width>
							<height>60</height>
							<texture border="5">buttons/ButtonFO.png</texture>
							<visible>Control.HasFocus(100)</visible>
						</control>
						<control type="label">
							<left>20</left>
							<width>680</width>
							<height>65</height>
							<info>ListItem.Label</info>
							<font>font13</font>
							<align>left</align>
							<aligny>center</aligny>
							<textcolor>black</textcolor>
						</control>
						<control type="label">
							<right>20</right>
							<width>680</width>
							<height>65</height>
							<info>ListItem.Label2</info>
							<font>font13</font>
							<align>right</align>
							<aligny>center</aligny>
							<textcolor>black</textcolor>
						</control>
					</focusedlayout>
					<content>
						<item id="101">
							<description>Pause / Resume button</description>
							<label>$LOCALIZE[35224]</label>
							<label2>Select + X</label2>
							<onclick>Play</onclick>
						</item>
						<item id="102">
							<description>Reset button</description>
							<label>$LOCALIZE[13007]</label>
							<onclick>PlayerControl(Reset)</onclick>
						</item>
						<item id="103">
							<description>Stop button</description>
							<label>$LOCALIZE[35222]</label>
							<label2>Select + Start</label2>
							<onclick>Stop</onclick>
						</item>
						<item id="108">
							<description>Settings button</description>
							<label>$LOCALIZE[5]</label>
							<onclick>SetProperty(settingslist_content,games,home)</onclick>
							<onclick>SetProperty(settingslist_header,$LOCALIZE[5],home)</onclick>
							<onclick>ActivateWindow(1104)</onclick>
						</item>
					</content>
					<pagecontrol>200</pagecontrol>
				</control>
				<control type="scrollbar" id="200">
					<top>20</top>
					<right>0</right>
					<width>12</width>
					<orientation>vertical</orientation>
					<showonepage>false</showonepage>
				</control>
			</control>
		</control>
	</controls>
</window>
