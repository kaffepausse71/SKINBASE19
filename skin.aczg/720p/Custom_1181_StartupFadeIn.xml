<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1181">
	<!--
	<zorder>4</zorder>
	-->
	<!--
	<defaultcontrol always="true">11811</defaultcontrol>
	-->
	
	
	<animation effect="fade" start="100" end="100" time="0">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" tween="quadratic" easing="in" time="5000">WindowClose</animation>
	
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	
	<!--
	<onload>SetProperty(ExperimentalStartScreenDone,,home)</onload>
	<onload>SetProperty(ExperimentalStartScreenDoneDelayed,,home)</onload>
	<onload>CancelAlarm(ExperimentalStartScreenAlarm1,silent)</onload>
	<onload>CancelAlarm(ExperimentalStartScreenAlarm2,silent)</onload>
	-->
	
	<!--
	<onload>SetProperty(DebugTest1,True,home)</onload>
	-->
	
	<onload condition="String.IsEqual(Skin.String(ExperimentalStartScreenEnabledDelay),0) | String.IsEmpty(Skin.String(ExperimentalStartScreenEnabledDelay))">AlarmClock(ExperimentalStartScreenAlarm1,SetProperty(ExperimentalStartScreenDone,True,home),00:00:01,silent)</onload>
	<onload condition="String.IsEqual(Skin.String(ExperimentalStartScreenEnabledDelay),1)">AlarmClock(ExperimentalStartScreenAlarm1,SetProperty(ExperimentalStartScreenDone,True,home),00:00:04,silent)</onload>
	<onload condition="String.IsEqual(Skin.String(ExperimentalStartScreenEnabledDelay),2)">AlarmClock(ExperimentalStartScreenAlarm1,SetProperty(ExperimentalStartScreenDone,True,home),00:00:07,silent)</onload>
	<onload condition="String.IsEqual(Skin.String(ExperimentalStartScreenEnabledDelay),3)">AlarmClock(ExperimentalStartScreenAlarm1,SetProperty(ExperimentalStartScreenDone,True,home),00:00:10,silent)</onload>
	
	
	
	
	
	<onunload>SetProperty(ExperimentalStartScreenDone,True,home)</onunload>
	<onunload>AlarmClock(ExperimentalStartScreenAlarm2,SetProperty(ExperimentalStartScreenDoneDelayed,True,home),00:00:25,silent)</onunload>
	
	
	<controls>

		
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<texture>_added_img/100x100_black.png</texture>
		</control>
		
		<control type="image">
			<left>604</left>
			<top>324</top>
			<width>72</width>
			<height>72</height>
			<texture align="center">_added_img/kodi-logo-large.png</texture>
			<!--
			<animation effect="fade" start="100" end="0" time="100" condition="!String.IsEmpty(Window(home).Property(ExperimentalStartScreenDone))">conditional</animation>
			-->
			<animation effect="fade" start="0" end="100" time="1000">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="250">WindowClose</animation>
			<aspectratio>keep</aspectratio>
			
			<animation effect="slide" end="0,-28" time="0" condition="Skin.HasSetting(LoadingScreenMadVrLogo)">Conditional</animation>
			
		</control>
		
		<control type="image">
			<left>578</left>
			<top>394</top><!-- 422 -->
			<width>124</width>
			<height>32</height>
			<texture align="center">_added_img/madvr-logo-full.png</texture>
			
			
			<animation effect="fade" start="0" end="100" time="1000" delay="1000">WindowOpen</animation>
			
			<animation effect="fade" start="100" end="0" time="250">WindowClose</animation>
			<!--
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="1000" />
				<effect type="slide" start="0,30" end="0,0" time="1000" />
			</animation>
			-->
			
			<aspectratio>keep</aspectratio>
			<visible>Skin.HasSetting(LoadingScreenMadVrLogo)</visible>
		</control>
		
	</controls>
</window>
