	<include name="ThumbnailView">
		<control type="group">
			<visible>Control.IsVisible(500)</visible>
			<include>VisibleFadeEffect</include>
			<control type="panel" id="500">
				
				<visible>!Container.Content(Years) + !Container.Content(Tags) + !Container.Content(Genres) + !Container.Content(Countries) + !Container.Content(Studios) + !Container.Content(Directors)</visible>
				
				<left>10</left><!-- BEFORE SCROLLBAR WAS ADDED - left=16 -->
				<top>0</top>
				<width>1260</width>
				<height>720</height>
				<onleft>2</onleft>
				<onright>500</onright><!-- 60 -->
				<onup>500</onup>
				<ondown>500</ondown>
				<viewtype label="Wall View 2x7">list</viewtype>
				<pagecontrol>60</pagecontrol>
				<!--<scrolltime tween="sine" easing="inout">450</scrolltime>-->
				<scrolltime tween="quadratic" easing="out">475</scrolltime>
				<preloaditems>2</preloaditems>
				<itemlayout width="179" height="275">
					<control type="group">
						<top>44</top>
						<include>WallView2x7_itemLayout</include>
					</control>
				</itemlayout>
				<focusedlayout width="179" height="275">
					<control type="group">
						<top>44</top>
						<include>WallView2x7_focusedLayout</include>
					</control>
				</focusedlayout>
			</control>
			
			<control type="scrollbar" id="60">
				<left>1262</left>
				<top>-2</top>
				<width>20</width>
				<height>724</height>
				<include>scrollBarStyle</include>
				<onleft>500</onleft>
				<onright>60</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
