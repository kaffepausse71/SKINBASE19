<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="ShiftPosterThumbs">
         <control type="image">
            <left>-8</left>
            <top>87</top>
            <width>235</width>
            <height>329</height>
            <texture colordiffuse="blue">thumbs/poster_back_item.png</texture>
            <fadetime>200</fadetime>
            <aspectratio scalediffuse="false">stretch</aspectratio>
          </control>
		<control type="image">
            <left>-8</left>
            <top>87</top>
            <width>227</width>
            <height>327</height>
            <aspectratio scalediffuse="false">scale</aspectratio>
             <texture background="true"  diffuse="thumbs/poster_diffuse_itemlist.png">$VAR[PosterThumb]</texture>
            <bordertexture border="20">humbs/poster_back_item.png</bordertexture>
            <bordersize>20</bordersize>
        </control>
        <control type="image">
		<depth>DepthContentPopout</depth>
            <left>5</left>
            <top>401</top>
            <width>200</width>
            <height>300</height>
            <aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
            <texture background="true" flipy="true" diffuse="thumbs/poster_diffuse_itemlist.png">$VAR[PosterThumb]</texture>
            <animation effect="fade" start="100" end="30" time="400">Focus</animation>
            <animation effect="fade" start="30" end="100" time="400">UnFocus</animation>
        </control>
        <control type="image">
            <left>133</left>
            <top>99</top>
            <width>67</width>
            <height>67</height>
            <texture>$VAR[OverlayVar]</texture>
            <aspectratio align="center" aligny="top">keep</aspectratio>
            <bordersize>1</bordersize>
        </control>
		<control type="image">
						<depth>DepthContentPopout</depth>
						<left>165</left>
						<top>360</top>
						<width>35</width>
						<height>35</height>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[ListItem.Overlay]</texture>
						<animation effect="fade" start="100" end="30" time="400">Focus</animation>
                        <animation effect="fade" start="30" end="100" time="400">UnFocus</animation>
						<visible>!ListItem.IsResumable</visible>
					</control>
					<control type="image">
						<depth>DepthContentPopout</depth>
						<left>165</left>
						<top>360</top>
						<width>35</width>
						<height>35</height>
						<aspectratio>keep</aspectratio>
						<texture>OverlayWatching.png</texture>
						<animation effect="fade" start="100" end="30" time="400">Focus</animation>
                        <animation effect="fade" start="30" end="100" time="400">UnFocus</animation>
						<visible>ListItem.IsResumable</visible>
					</control>
        <control type="group">
            <left>20</left>
            <top>113</top>
            <include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
        </control>
    </include>
    <include name="ShiftSquareThumbs">
        <control type="image">
            <left>-8</left>
            <top>187</top>
            <width>227</width>
            <height>227</height>
            <aspectratio scalediffuse="false">scale</aspectratio>
            <texture background="true">$INFO[ListItem.Icon]</texture>
            <bordertexture colordiffuse="$INFO[Skin.String(menuColor)]" border="20">thumbs/poster_back_item.png</bordertexture>
            <bordersize>20</bordersize>
        </control>
        <control type="image">
		<depth>DepthContentPopout</depth>
            <left>5</left>
            <top>400</top>
            <width>200</width>
            <height>200</height>
            <aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
            <texture background="true" flipy="true" diffuse="thumbs/poster_diffuse_itemlist.png">$VAR[PosterThumb]</texture>
            <animation effect="fade" start="100" end="30" time="400">Focus</animation>
            <animation effect="fade" start="30" end="100" time="400">UnFocus</animation>
        </control>
        <control type="image">
            <left>133</left>
            <top>99</top>
            <width>67</width>
            <height>67</height>
            <texture>$VAR[OverlayVar]</texture>
            <aspectratio align="center" aligny="top">keep</aspectratio>
            <bordersize>1</bordersize>
        </control>
    </include>
    <include name="PosterShift">
        <control type="group">
            <include>ViewAnimation</include>
            <visible>Control.IsVisible(57) + !Window.IsActive(addoninformation)</visible>
			 <control type="image">
                <left>-120</left>
                <top>20</top>
                <width>1307</width>
                <height>720</height>
                <aspectratio>stretch</aspectratio>
                <visible>true</visible>
                <texture background="false">thumbs/netflixshadow.png</texture>
            </control>
            <control type="image">
			<depth>DepthContentPopout</depth>
                <left>480</left>
                <top>0</top>
                <width>800</width>
                <height>450</height>
                <aspectratio>scale</aspectratio>
                <visible>true</visible>
                <texture background="false">$INFO[ListItem.Art(fanart)]</texture>
                <fadetime>FanartCrossfadeTime</fadetime>
            </control>
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1400</width>
                <height>767</height>
                <aspectratio>stretch</aspectratio>
                <visible>true</visible>
                <texture background="false">thumbs/netflixshadow.png</texture>
            </control>
            <control type="fixedlist" id="57">
                <left>-80</left>
                <top>260</top>
                <width>109.37%</width>
                <height>500</height>
               <onup>9000</onup>
               <onleft>57</onleft>
                <onright>57</onright>
                <ondown>5761</ondown>
                <orientation>horizontal</orientation>
                <viewtype label="Netflix Style">BigWrap</viewtype>
                <pagecontrol>5761</pagecontrol>
                <preloaditems>2</preloaditems>
                <scrolltime tween="quadratic">400</scrolltime>
                <focusposition>1</focusposition>
                <visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(musicvideos) | Container.Content(seasons) | Container.Content(genres) | Container.Content(sets) | Container.Content(addons) | Container.Content(files)</visible>
                <itemlayout width="210" height="500" condition="!Container.Content(addons)">
                    <include>ShiftPosterThumbs</include>
                </itemlayout>
				
                <focusedlayout width="210" height="500" condition="!Container.Content(addons)">
                    <control type="group">
                        <depth>MaxDepth</depth>
                        <animation effect="zoom" center="auto" start="100" end="130" time="400" tween="quadratic" reversible="false">Focus</animation>
                        <animation effect="zoom" center="auto" start="130" end="100" time="400" tween="quadratic" reversible="false">Unfocus</animation>
                        <include>ShiftPosterThumbs</include>
                    </control>
                </focusedlayout>
                <itemlayout width="210" height="500" condition="Container.Content(addons)">
                    <include>ShiftSquareThumbs</include>
                </itemlayout>
                <focusedlayout width="210" height="500" condition="Container.Content(addons)">
                    <control type="group">
                        <animation effect="zoom" center="100,300" start="100" end="130" time="400" tween="quadratic" reversible="false">Focus</animation>
                        <animation effect="zoom" center="100,300" start="130" end="100" time="400" tween="quadratic" reversible="false">Unfocus</animation>
                        <include>ShiftSquareThumbs</include>
                    </control>
                </focusedlayout>
            </control>
			
			 <control type="label">
                    <left>17</left>
                    <top>33</top>
                    <width>1280</width>
                    <height>59</height>
                    <font>font30</font>
                    <textcolor>$INFO[Skin.String(menuColor)]</textcolor>
                    <align>left</align>
                    <aligny>Top</aligny>
                    <wrapmultiline>true</wrapmultiline>
                    <label>$INFO[Listitem.Label]</label>
                </control>
                <control type="label">
                    <left>20</left>
                    <top>74</top>
                    <width>1280</width>
                    <height>59</height>
                    <font>font12_title</font>
                    <textcolor>grey</textcolor>
                    <align>left</align>
                    <aligny>Top</aligny>
                    <wrapmultiline>true</wrapmultiline>
                    <label>$INFO[ListItem.Genre]</label>
                </control>
				<control type="textbox">
					<description>Description For Movie</description>
					<left>20</left>
					<top>110</top>
					<width>450</width>
					<height>186</height>
					<font>font12_title</font>
					<align>left</align>
					<textcolor>white</textcolor>
					<label>$INFO[ListItem.Plot]</label>
					<autoscroll time="2000" delay="3000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
				</control>
				
          <control type="scrollbar" id="5761">
               <left>100</left>
               <top>900</top>
               <width>1080</width>
                <height>25</height>
                <onup>57</onup>
                <ondown>noop</ondown>
                <texturesliderbackground />
                <texturesliderbackground border="14,0,14,0">ScrollBarH.png</texturesliderbackground>
				<texturesliderbar border="14,0,14,0">ScrollBarH_bar.png</texturesliderbar>
				<texturesliderbarfocus colordiffuse="$INFO[Skin.String(menuColor)]" border="14,0,14,0">ScrollBarH_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
                <showonepage>false</showonepage>
                <orientation>horizontal</orientation>
                <animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(5761) + !Container.Scrolling">Conditional</animation>
				<visible>Control.IsVisible(57)</visible>
            </control>
        </control>
    </include>
    <include name="AlbumShift">
        <control type="group">
            <include>ViewAnimation</include>
            <visible>Control.IsVisible(57) + !Window.IsActive(addoninformation)</visible>
            <control type="fixedlist" id="57">
                <left>-80</left>
                <top>200</top>
                <width>109.37%</width>
                <height>500</height>
                <onup>SetProperty(MediaMenu,True,home)</onup>
                <onup>SetFocus(9050)</onup>
                <onleft>57</onleft>
                <onright>57</onright>
                <ondown>5761</ondown>
                <orientation>horizontal</orientation>
                <viewtype label="31079">BigWrap</viewtype>
                <pagecontrol>5761</pagecontrol>
                <scrolltime tween="quadratic">400</scrolltime>
                <focusposition>1</focusposition>
                <visible>Container.Content(games) | Container.Content(addons) | Container.Content(songs) | Container.Content(artists) | Container.Content(albums) | Container.Content(genres)</visible>
                <itemlayout width="210" height="500">
                    <include>ShiftSquareThumbs</include>
                </itemlayout>
                <focusedlayout width="210" height="500">
                    <control type="group">
                        <animation effect="zoom" center="100,300" start="100" end="130" time="400" tween="quadratic" reversible="false">Focus</animation>
                        <animation effect="zoom" center="100,300" start="130" end="100" time="400" tween="quadratic" reversible="false">Unfocus</animation>
                        <include>ShiftSquareThumbs</include>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="5761">
               <left>100</left>
               <top>900</top>
               <width>1080</width>
                <height>25</height>
                <onup>57</onup>
                <ondown>noop</ondown>
                <texturesliderbackground />
                <texturesliderbackground border="14,0,14,0">ScrollBarH.png</texturesliderbackground>
				<texturesliderbar border="14,0,14,0">ScrollBarH_bar.png</texturesliderbar>
				<texturesliderbarfocus colordiffuse="$INFO[Skin.String(menuColor)]" border="14,0,14,0">ScrollBarH_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
                <showonepage>false</showonepage>
                <orientation>horizontal</orientation>
                <animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(5761) + !Container.Scrolling">Conditional</animation>
				<visible>Control.IsVisible(57)</visible>
            </control>
        </control>
    </include>
</includes>
