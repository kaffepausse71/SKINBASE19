<?xml version="1.0" encoding="UTF-8"?>
<window><!-- Ace 2 -->
	<defaultcontrol always="true">450</defaultcontrol>
	<include>library_loads</include>
	<onunload>RunScript(script.favourites)</onunload>
	<controls>
		<include content="common_background">
			<param name="mask" value="white80" />	
			<param name="condition" value="true" />
		</include>
		<control type="group">
			<include>animation_window</include>
			<control type="group">
				<animation effect="slide" end="-450,0" time="300" tween="sine" easing="out" reversible="true" condition="!String.IsEmpty(Control.GetLabel(8025))">Conditional</animation>
				<include content="settings_right_title">
					<param name="label" value="$LOCALIZE[33029]" />
					<param name="slide" value="false" />
				</include>					
				<control type="image" id="8025">
					<left>1970</left>
					<top>180</top>
					<width>350</width>
					<height>450</height>
					<fadetime>common_fade_time</fadetime>
					<aspectratio aligny="top">keep</aspectratio>
					<texture>$INFO[Container(450).ListItem.Icon]</texture>					
				</control>				
				<include content="media_info_plot">
					<param name="left" value="1970" />
					<param name="top" value="650" />
					<param name="width" value="350" />
					<param name="height" value="415" />	
					<param name="label" value="$VAR[media_plot]" />						
					<param name="visible" value="true" />
				</include>
			</control>
			<control type="group">
				<animation effect="slide" end="-225,0" time="300" tween="sine" easing="out" reversible="true" condition="!String.IsEmpty(Control.GetLabel(8025))">Conditional</animation>				
				<include content="dialogs_furniture">
					<param name="id" value="1" />
					<param name="left" value="180" />
					<param name="width" value="1470" />
					<param name="title" value="$LOCALIZE[1036]" />				
				</include>
				<control type="list" id="450">
					<left>225</left>
					<width>1470</width>
					<height>840</height>
					<onleft>Action(Back)</onleft>
					<onright>80</onright>
					<pagecontrol>80</pagecontrol>
					<itemlayout height="60">
						<include content="list_furniture">
							<param name="width" value="1470" />
							<param name="height" value="60" />
							<param name="align" value="left" />
							<param name="label" value="$INFO[ListItem.label]" />
							<param name="font" value="font_settings" />
						</include>
					</itemlayout>
					<focusedlayout height="60">
						<include content="list_furniturefocus">
							<param name="width" value="1470" />
							<param name="height" value="60" />
							<param name="align" value="left" />
							<param name="label" value="$INFO[ListItem.label]" />
							<param name="font" value="font_settings" />
							<param name="visible" value="Control.HasFocus(450)" />
						</include>
					</focusedlayout>
				</control>
			<include content="scroll_bar_vertical">
				<param name="id" value="80" />
				<param name="left" value="1650" />
				<param name="top" value="180" />
				<param name="height" value="840" />
				<param name="onleft" value="450" />
				<param name="onright" value="450" />
				<param name="hiddenfocus" value="false" />
				<param name="visible" value="true" />
			</include>				
			</control>			
			<control type="label">
				<left>225</left>
				<top>480</top>
				<align>center</align>
				<label>$LOCALIZE[31221]</label>
				<visible>Integer.IsEqual(Container(450).NumItems,0)</visible>
			</control>
		</control>
		<include>library_furniture</include>
	</controls>
</window>