<?xml version="1.0" encoding="UTF-8"?>
<window><!-- Ace 2 -->
	<defaultcontrol always="true">50</defaultcontrol>
	<include>library_loads</include>
	<views>50,51,56,68</views>
	<controls>
		<include>library_background</include>
		<control type="group">
			<include>animation_library</include>								
			<include>view_rightlist</include>				
			<include>view_frame</include>
			<include>view_wall</include>
			<include>view_tech</include>
			<include>media_flags</include>
			<include>library_furniture</include>
		</control>
		<visible>![Window.IsActive(pvrguideinfo) | Window.IsActive(pvrrecordinginfo) | Window.IsActive(pvrguidesearch) | Window.IsActive(pvrtimersetting)]</visible>
		<control type="group">
			<animation effect="slide" start="0,-105" end="0,0" time="500" delay="1000" easing="inout" tween="sine">WindowOpen</animation>
			<animation effect="slide" start="0,-105" end="0,0" time="500" delay="1000" easing="inout" tween="sine">Visible</animation>
			<animation effect="slide" start="0,0" end="0,-105" time="300" easing="inout" tween="sine">WindowClose</animation>
			<animation effect="slide" start="0,0" end="0,-105" time="300" easing="inout" tween="sine">Hidden</animation>
			<animation effect="slide" start="0,0" end="450,0" time="0" easing="in" tween="sine" condition="Control.IsVisible(50)">Conditional</animation>
			<visible>[PVR.IsRecording | PVR.HasNonRecordingTimer] + ![Player.HasMedia | Control.HasFocus(9920) | ControlGroup(9000).HasFocus]</visible>
			<control type="image">
				<left>30</left>
				<top>8</top>
				<width>22</width>
				<height>22</height>
				<aspectratio>keep</aspectratio>
				<texture>pvr_hastimer.png</texture>
				<visible>PVR.HasNonRecordingTimer + !PVR.IsRecording</visible>
			</control>
			<control type="image">
				<left>30</left>
				<top>8</top>
				<width>30</width>
				<height>22</height>
				<aspectratio>keep</aspectratio>
				<texture>pvr_isrecording.png</texture>
				<visible>PVR.IsRecording</visible>
			</control>
			<control type="label">
				<left>68</left>
				<top>3</top>
				<width>630</width>
				<height>30</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>font_plot</font>
				<label>$VAR[pvr_status]</label>
				<scroll>true</scroll>
			</control>
		</control>
		<control type="label" id="29">
			<include>invisible_label</include>
		</control>
		<control type="label" id="30">
			<include>invisible_label</include>
		</control>
	</controls>
</window>