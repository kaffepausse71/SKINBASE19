		<control type="group">
			<include>animation_window</include>
			<visible>$EXP[kiosk_code_control]</visible>
			<control type="image">
				<left>0</left>
				<top>180</top>
				<width>1920</width>
				<height>779</height>
				<texture colordiffuse="$INFO[skin.string(texture_color_highlight)]">settings_grid.png</texture>
			</control>
			<control type="panel" id="9000">
				<left>0</left>
				<top>181</top>
				<width>1920</width>
				<height>990</height>				
