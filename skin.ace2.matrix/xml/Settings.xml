					</control>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>480</width>
						<height>260</height>
						<texture>gradient_mask.png</texture>
						<animation effect="fade" end="50" condition="true">conditional</animation>
					</control>
				</focusedlayout>
