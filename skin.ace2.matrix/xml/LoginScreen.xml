<?xml version="1.0" encoding="UTF-8"?>
<window><!-- Ace 2 -->
	<defaultcontrol always="true">52</defaultcontrol>
	<controls>
		<include content="common_background">
			<param name="mask" value="white80" />	
			<param name="condition" value="true" />
		</include>
		<control type="group">
			<include>animation_window</include>
			<control type="fixedlist" id="52">
				<left>140</left>
				<top>400</top>
				<width>800</width>
				<height>280</height>					
				<onleft>20</onleft>
				<onright>20</onright>
				<onfocus>SetProperty(reload_home,true,home)</onfocus>
				<itemlayout height="45">						
					<control type="label">
						<width>800</width>
						<height>45</height>							
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
						<font>font_listboldsmall</font>
						<scroll>false</scroll>
						<animation effect="fade" end="50" condition="true">Conditional</animation>
						<visible>!Container(52).Row(1)</visible>
					</control>
				</itemlayout>
				<focusedlayout height="140">
					<control type="group">
						<animation effect="slide" start="0,0" end="0,-50" time="0" condition="Container(52).Row(1)">Conditional</animation>
						<control type="label">
							<width>800</width>
							<align>right</align>
							<label>$INFO[ListItem.Label]</label>
							<font>font_viewtitle</font>
						</control>
						<control type="label">
							<top>63</top>
							<width>800</width>
							<height>60</height>												
							<align>right</align>
							<aligny>top</aligny>
							<label>$INFO[ListItem.Label2]</label>
							<font>font_plot</font>
							<animation effect="slide" end="-245,0" time="0" easing="inout" tween="sine" condition="Integer.IsGreater(ListItem.PercentPlayed,0)">Conditional</animation>
							<visible>!ListItem.IsParentFolder</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="image">
				<left>980</left>
				<top>405</top>
				<width>280</width>
				<height>280</height>
				<fadetime>common_fade_time</fadetime>
				<aspectratio align="left" aligny="top">keep</aspectratio>
				<texture fallback="user.png">$INFO[ListItem.Icon]</texture>
			</control>
			<control type="grouplist" id="9001">
				<top>1020</top>
				<width>1920</width>
				<height>60</height>				
				<onup>52</onup>
				<ondown>52</ondown>
				<align>center</align>
				<orientation>horizontal</orientation>
				<include content="settings_floor_button">
					<param name="id" value="20" />
					<param name="label" value="$LOCALIZE[31177]" />
					<param name="onclick" value="ActivateWindow(ShutdownMenu)" />
					<param name="width" value="490" />
					<param name="visible" value="true" />
				</include>
			</control>
			<include content="gradient_line">
				<param name="left" value="0" />
				<param name="topline" value="1020" />
				<param name="topshadow" value="1020" />
				<param name="width" value="1920" />
				<param name="flipy" value="true" />
				<param name="visible" value="true" />
			</include>
		</control>
	</controls>
</window>