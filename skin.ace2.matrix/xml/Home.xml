<?xml version="1.0" encoding="UTF-8"?>
<window><!-- Ace 2 -->
	<defaultcontrol always="true">9000</defaultcontrol>	
	<onload condition="!String.IsEqual(skin.string(settings_default),skinace2_reset02)">ActivateWindow(1163)</onload>
	<onload condition="!String.IsEqual(skin.string(settings_default),skinace2_reset02)">Skin.ResetSettings</onload>
	<onload condition="String.IsEqual(Window(home).Property(reload_home),true)">AlarmClock(reload_home,ReloadSkin(),0:01,true)</onload>
	<onload condition="String.IsEqual(Window(home).Property(reload_home),true)">ClearProperty(reload_home,home)</onload>	
	<onload condition="!String.IsEmpty(Weather.Plugin) + String.IsEmpty(skin.string(resource.images.weathericons.path))">InstallAddon(resource.images.weathericons.animated)</onload>
	<onload condition="Library.HasContent(TVShows) + !System.HasAddon(service.upnext)">InstallAddon(service.upnext)</onload>
	<onload condition="!System.HasAddon(script.skin.helper.service)">InstallAddon(script.skin.helper.service)</onload>
	<onload condition="String.IsEqual(Window(home).Property(reset_partial),true)">ClearProperty(reset_partial,home)</onload>
	<include condition="!String.IsEqual(skin.string(settings_fix),skinace2_fix09)">quick_fix</include>
	<include content="library_status_list" condition="System.HasAddon(script.randomandlastitems)">
	</include>
	<onload>ClearProperty(library_status,home)</onload>
	<onload>ClearProperty(Playlist_Count,home)</onload>
	<onunload>SetProperty(library_status,$INFO[Container(9000).ListItem.Property(master)],home)</onunload>			
	<onunload>ClearProperty(SkinHelper.WidgetContainer,home)</onunload>
	<onunload condition="String.IsEqual(skin.string(kiosk_code_step),step3)">Skin.Reset(kiosk_code_step)</onunload>		
	<controls>	
		<include content="common_background">
		</include>
		<control type="image" id="8000">
			<include>invisible_image</include>
			<animation effect="fade" start="0" end="100" time="150" delay="1000" condition="String.IsEqual(skin.string(widgets_seconds),1)">Visible</animation>
			<animation effect="fade" start="0" end="100" time="150" delay="2000" condition="String.IsEqual(skin.string(widgets_seconds),2)">Visible</animation>
			<animation effect="fade" start="0" end="100" time="150" delay="3000" condition="String.IsEqual(skin.string(widgets_seconds),3)">Visible</animation>
			<animation effect="fade" start="0" end="100" time="150" delay="4000" condition="String.IsEqual(skin.string(widgets_seconds),4)">Visible</animation>
			<animation effect="fade" start="0" end="100" time="150" delay="5000" condition="String.IsEqual(skin.string(widgets_seconds),5)">Visible</animation>
			<visible>![Container(9000).OnNext | Container(9000).OnPrevious]</visible>
		</control>		
		<control type="image" id="8001">
			<include>invisible_image</include>
			<animation effect="fade" end="100" time="300">Visible</animation>
			<visible>![Container(9000).OnNext | Container(9000).OnPrevious]</visible>
		</control>				
		<control type="group">
			<include>animation_home</include>	
			<include content="weather_clock">
				<param name="grouptop" value="131" />
				<param name="groupslide" value="-80" />				
				<param name="clockleft" value="50" />
				<param name="clockslide" value="300" />
				<param name="clockfont" value="font_clockhome" />
				<param name="clockcolor" value="light" />
				<param name="shadow" value="grey" />
				<param name="clockvisible" value="![Skin.HasSetting(mainmenu_clock_off) | !Skin.HasSetting(mainmenu_vertical) + Player.HasMedia + !Skin.HasSetting(mainmenu_now_playing_off)]" />
				<param name="datetop" value="80" />	
				<param name="datecolor" value="light" />
				<param name="datevisible" value="![Skin.HasSetting(mainmenu_clock_off) | !Skin.HasSetting(mainmenu_vertical) + Player.HasMedia + !Skin.HasSetting(mainmenu_now_playing_off)]" />		
				<param name="weatherleft" value="1250" />
				<param name="weathertop" value="8" />
				<param name="weatheralign" value="right" />
				<param name="weatherfont" value="font_weatherhome" />
				<param name="weathercolor" value="light" />
				<param name="weathervisible" value="!Skin.HasSetting(mainmenu_weather_off)" />
				<param name="infoleft" value="1250" />
				<param name="infotop" value="70" />
				<param name="infoalign" value="right" />
				<param name="infovisible" value="!Skin.HasSetting(mainmenu_weather_off)" />
				<param name="weathericontop" value="5" />					
				<param name="weathericonleft" value="1770" />
				<param name="weathericon" value="100" />
				<param name="visible" value="![ControlGroup(5000).HasFocus | Window.IsVisible(1171)]" />
			</include>								
			<include content="widgets_furniture">
				<param name="id" value="50" />
			</include>
			<include content="rss" condition="system.getbool(lookandfeel.enablerssfeeds)">
			</include>
			<control type="group">
				<animation effect="fade" start="100" end="0" time="300" condition="ControlGroup(5000).HasFocus | ControlGroup(5052).HasFocus">Conditional</animation>
				<animation effect="zoom" center="550,250" start="100" end="0" time="500" tween="sine" easing="inout" reversible="true" condition="ControlGroup(5000).HasFocus | ControlGroup(5052).HasFocus">Conditional</animation>
				<animation effect="slide" end="300,75" time="0" condition="Skin.HasSetting(mainmenu_vertical)">Conditional</animation>				
				<visible>Player.HasMedia + ![Skin.HasSetting(mainmenu_now_playing_off) | Window.IsVisible(1101) | Window.IsVisible(1171)]</visible>
				<control type="label">
					<left>567</left>
					<top>147</top>
					<width>650</width>
					<height>30</height>
					<label>31582</label>
					<font>font_plot</font>
					<textcolor>light</textcolor>
					<shadowcolor>grey</shadowcolor>
					<scroll>true</scroll>
					<animation effect="slide" end="-214,0" time="300" tween="sine" easing="inout" condition="Player.HasAudio">Conditional</animation>
				</control>
				<control type="label">
					<left>567</left>
					<top>187</top>
					<width>650</width>
					<height>30</height>
					<label>$VAR[now_playing_title]</label>
					<font>font_listboldsmall</font>
					<textcolor>light</textcolor>
					<shadowcolor>grey</shadowcolor>
					<scroll>true</scroll>
					<animation effect="slide" end="-214,0" time="300" tween="sine" easing="inout" condition="Player.HasAudio">Conditional</animation>
				</control>
				<control type="label">
					<left>353</left>
					<top>227</top>
					<width>650</width>
					<height>30</height>
					<label>[B]$INFO[MusicPlayer.Artist][/B]</label>
					<font>font_plot</font>
					<textcolor>light</textcolor>
					<shadowcolor>grey</shadowcolor>
					<scroll>true</scroll>
					<visible>Player.HasAudio</visible>
				</control>
				<control type="image">
					<left>35</left>
					<top>132</top>
					<width>313</width>
					<height>312</height>
					<texture>now_playing_audio_border.png</texture>
					<visible>Player.HasAudio</visible>					
				</control>
				<control type="multiimage">
					<left>54</left>
					<top>150</top>
					<width>276</width>
					<height>276</height>
					<randomize>true</randomize>
					<fadetime>common_fade_time</fadetime>
					<timeperimage>common_time_per_image</timeperimage>
					<aspectratio align="center" aligny="bottom">keep</aspectratio>
					<imagepath fallback="DefaultPicture.png" background="true">$VAR[player_thumb]</imagepath>
					<visible>Player.HasAudio</visible>
				</control>
				<control type="image">
					<left>35</left>
					<top>132</top>
					<width>527</width>
					<height>312</height>
					<texture>now_playing_video_border.png</texture>
					<visible>Player.HasVideo</visible>					
				</control>				
				<control type="videowindow">
					<left>53</left>
					<top>150</top>
					<width>491</width>
					<height>276</height>
					<aspectratio>stretch</aspectratio>
					<animation effect="slide" start="0,0" end="-3000,0" time="0" tween="sine" easing="out" >WindowClose</animation>
					<visible>Player.HasVideo</visible>
				</control>				
			</control>
			<control type="list" id="43260">
				<left>-1</left>
				<top>-1</top>
				<width>1</width>
				<height>1</height>
				<focusedlayout />
				<itemlayout />
				<content>$VAR[library_status_content]</content>
				<visible>String.IsEqual(Container(9000).ListItem.Property(master),videoplaylist) | String.IsEqual(Container(9000).ListItem.Property(master),videonode)</visible>
			</control>							
			<control type="group">
				<animation effect="slide" end="0,177" time="200" tween="sine" easing="out" reversible="true" condition="!Skin.HasSetting(mainmenu_vertical) + ControlGroup(5000).HasFocus">Conditional</animation>
				<animation effect="slide" end="-275,0" time="200" tween="sine" easing="out" reversible="true" condition="Skin.HasSetting(mainmenu_vertical) + ControlGroup(5000).HasFocus">Conditional</animation>
				<include content="mainmenu_furniture" condition="!Skin.HasSetting(mainmenu_vertical)">
					<param name="top" value="903" />
					<param name="width" value="1920" />
					<param name="height" value="177" />
					<param name="orientation" value="horizontal" />
					<param name="itemlayoutheight" value="177" />
				</include>
				<include content="mainmenu_furniture" condition="Skin.HasSetting(mainmenu_vertical)">
					<param name="top" value="0" />
					<param name="width" value="275" />
					<param name="height" value="1080" />
					<param name="orientation" value="vertical" />
					<param name="itemlayoutheight" value="180" />
				</include>				
			</control>	
			<include condition="Skin.HasSetting(touch_screen)">touch_screen</include>
		</control>
		<include>mask_background</include>
	</controls>
</window>