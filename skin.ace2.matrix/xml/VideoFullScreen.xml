<?xml version="1.0" encoding="UTF-8"?>
<window><!-- Ace 2 -->
	<controls>
		<control type="group">
			<width>1920</width>
			<height>300</height>
			<animation effect="slide" time="400" start="0,-300" end="0,0" easing="out" tween="sine">WindowOpen</animation>
			<animation effect="slide" time="400" start="0,-300" end="0,0" easing="out" tween="sine">Visible</animation>
			<animation effect="slide" time="400" start="0,0" end="0,-300" easing="in" tween="sine">WindowClose</animation>
			<animation effect="slide" time="400" start="0,0" end="0,-300" easing="in" tween="sine">Hidden</animation>
			<visible>![Window.IsVisible(seekbar) | Window.IsVisible(osdvideosettings) | Window.IsVisible(osdaudiosettings) | Window.IsActive(fullscreeninfo) | Window.IsActive(videoosd) | Skin.HasSetting(customosd)]</visible>
			<control type="image">
				<height>300</height>				
				<texture flipy="true" colordiffuse="$INFO[skin.string(texture_color_base)]">shadow_mask.png</texture>
			</control>
			<control type="grouplist">
				<left>50</left>
				<top>100</top>
				<width>1820</width>
				<height>300</height>
				<itemgap>7</itemgap>
				<control type="label" id="10">
				</control>
				<control type="label" id="11">
				</control>
				<control type="label" id="12">
				</control>
			</control>
		</control>
	</controls>
</window>