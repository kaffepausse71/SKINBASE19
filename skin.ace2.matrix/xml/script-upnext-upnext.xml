<?xml version="1.0" encoding="UTF-8"?>
<window><!-- Ace 2 -->
	<defaultcontrol always="true">3012</defaultcontrol>
	<onload>Dialog.Close(fullscreeninfo,true)</onload>
	<onload>Dialog.Close(videoosd,true)</onload>
	<controls>
		<control type="group">
			<include content="animation_top_popup">
				<param name="delay" value="0" />
				<param name="slide" value="false" />					
			</include>
			<control type="image">
				<top>5</top>
				<height>180</height>
				<width>1920</width>
				<texture colordiffuse="$INFO[skin.string(texture_color_base)]">dialogs_upnext_back.png</texture>
			</control>
			<control type="image">
				<top>5</top>
				<height>180</height>
				<width>1920</width>
				<texture>dialogs_upnext_border.png</texture>
			</control>			
			<control type="image">
				<left>27</left>
				<top>14</top>				
				<width>284</width>
				<height>160</height>
				<aspectratio>keep</aspectratio>
				<texture>$VAR[upnext_art]</texture>				
			</control>
			<control type="image">
				<left>315</left>
				<top>21</top>
				<width>30</width>
				<height>35</height>
				<aspectratio>keep</aspectratio>
				<texture colordiffuse="$INFO[skin.string(texture_color_highlight)]">arrow_settings.png</texture>	
			</control>			
			<control type="grouplist">						
				<left>355</left>
				<top>21</top>
				<itemgap>5</itemgap>
				<control type="label">
					<width>1226</width>
					<height>35</height>
					<label>$INFO[Window.Property(tvshowtitle)]   $INFO[Window.Property(season),S,]$INFO[Window.Property(episode),E, - ]$INFO[Window.Property(title)]</label>
					<font>font_listboldsmall</font>
					<visible>!String.IsEmpty(Window.Property(title))</visible>
				</control>
				<control type="label">
					<width>400</width>
					<height>30</height>
					<label>$INFO[Window.Property(year)]</label>
					<font>font_plot</font>
					<visible>!String.IsEmpty(Window.Property(year))</visible>
				</control>						
			</control>
			<control type="label">
				<left>315</left>
				<top>138</top>
				<width>1226</width>
				<height>30</height>
				<label>$VAR[upnext_countdown_label]</label>
				<font>font_plot</font>
			</control>
			<control type="progress" id="3014">
				<left>315</left>
				<top>125</top>
				<width>580</width>
			</control>
			<include content="media_flags_rating_stars">
				<param name="flagleft" value="1593" />
				<param name="flagtop" value="28" />
				<param name="condition" value="Window.Property(Rating)" />
				<param name="visible" value="Integer.IsGreater(Window.Property(Rating),0)" />
			</include>						
			<control type="label">
				<left>1593</left>
				<top>70</top>
				<width>300</width>
				<height>30</height>	
				<align>center</align>
				<label>[B]$INFO[Window.Property(Rating)][/B]</label>
				<font>font_plot</font>
				<visible>!String.IsEmpty(Window.Property(Rating))</visible>					
			</control>
			<control type="grouplist">
				<left>932</left>
				<top>125</top>						
				<height>45</height>
				<itemgap>10</itemgap>                        
				<orientation>horizontal</orientation>
				<include content="dialogs_context_button">	
					<param name="id" value="3012" />
					<param name="label" value="$ADDON[service.upnext 30006]" />
					<param name="width" value="300" />
					<param name="visible" value="true" />
				</include>
				<include content="dialogs_context_button">	
					<param name="id" value="3013" />
					<param name="label" value="$ADDON[service.upnext 30034]" />
					<param name="width" value="300" />
					<param name="visible" value="true" />
				</include> 
			</control>
		</control>
	</controls>
</window>