<?xml version="1.0" encoding="UTF-8"?>
<window><!-- Ace 2 -->
	<controls>
		<include content="common_background">
			<param name="mask" value="white80" />	
			<param name="condition" value="true" />
		</include>
		<control type="visualisation">
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>1080</height>
			<animation effect="fade" start="0" end="100" time="400">Visible</animation>
			<animation effect="fade" start="100" end="0" time="400">Hidden</animation>
			<visible>String.IsEqual(skin.string(music_vis_background),fanartmix) | String.IsEqual(skin.string(music_vis_background),vis)</visible>
		</control>
		<control type="multiimage">
			<fadetime>common_fade_time</fadetime>
			<timeperimage>common_time_per_fanart</timeperimage>
			<include condition="Skin.HasSetting(keep_aspect)">keep_aspect</include>
			<imagepath background="true">$VAR[player_fanart]</imagepath>
			<include>animation_panscan</include>
			<animation effect="fade" start="100" end="50" time="400" condition="String.IsEqual(skin.string(music_vis_background),fanartmix)">Conditional</animation>
			<visible>!String.IsEqual(skin.string(music_vis_background),vis)</visible>
		</control>
		<control type="image">
			<top>400</top>
			<height>680</height>
			<texture colordiffuse="$INFO[skin.string(texture_color_base)]">shadow_mask.png</texture>
			<animation effect="fade" start="0" end="100" time="400">Visible</animation>
			<animation effect="fade" start="100" end="0" time="400">Hidden</animation>
			<visible>!Skin.HasSetting(music_osd_furniture_off) + ![Window.IsActive(musicosd) | Window.IsVisible(fullscreeninfo)]</visible>
		</control>		
		<control type="group">
			<animation effect="slide" start="0,450" end="0,0" time="400" easing="out" tween="sine">WindowOpen</animation>
			<animation effect="slide" start="0,450" end="0,0" time="400" easing="out" delay="500" tween="sine">Visible</animation>
			<animation effect="slide" start="0,0" end="0,450" time="400" easing="in" tween="sine">WindowClose</animation>
			<animation effect="slide" start="0,0" end="0,450" time="400" easing="in" tween="sine">Hidden</animation>
			<animation effect="slide" start="0,0" end="0,-35" time="300" tween="sine" easing="out" condition="Player.Forwarding">Conditional</animation>
			<animation effect="slide" start="0,0" end="0,-40" time="300" tween="sine" easing="out" condition="Player.Rewinding">Conditional</animation>				
			<animation effect="slide" start="0,0" end="0,-90" time="400" tween="sine" easing="inout" condition="Window.IsActive(seekbar)">Conditional</animation>			
			<visible>!Skin.HasSetting(music_osd_furniture_off) + ![Window.IsActive(musicosd) | Window.IsVisible(fullscreeninfo)]</visible>
			<control type="group">
				<left>-190</left>
				<top>680</top>	
				<animation effect="slide" start="0,0" end="220,0" time="800" delay="2000" tween="sine" easing="inout">WindowOpen</animation>
				<visible>!Skin.HasSetting(music_osd_cdart_off)</visible>
				<control type="image">					
					<left>245</left>
					<top>-70</top>
					<width>430</width>
					<height>430</height>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<texture diffuse="cdart_diffuse.png">$VAR[disc_audio_layout]</texture>	
					<include>animation_cdart</include>
				</control>
				<control type="image" id="70040">					
					<left>245</left>
					<top>-70</top>
					<width>430</width>
					<height>430</height>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<texture diffuse="cdart_diffuse.png" background="true">$INFO[Player.FolderPath]cdart.png</texture>
					<include>animation_cdart</include>
				</control>
				<control type="image">					
					<left>245</left>
					<top>-70</top>
					<width>430</width>
					<height>430</height>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<texture diffuse="cdart_diffuse.png" background="true">$VAR[media_disc_art]</texture>
					<include>animation_cdart</include>
					<visible>String.IsEmpty(Control.GetLabel(70040))</visible>
				</control>
			</control>			
			<control type="image">
				<left>50</left>
				<top>600</top>
				<width>450</width>
				<height>450</height>
				<aspectratio align="left" aligny="bottom">keep</aspectratio>
				<texture fallback="DefaultAlbumCover.png" background="true">$INFO[MusicPlayer.Cover]</texture>	
				<bordertexture border="-25">bigthumb_shadow.png</bordertexture>
				<bordersize>8</bordersize>					
			</control>				
			<control type="group">
				<left>700</left>
				<top>907</top>
				<control type="image">
					<width>855</width>
					<height>136</height>
					<texture colordiffuse="$INFO[skin.string(texture_color_base)]">music_vis_flags_back.png</texture>
				</control>
				<control type="label">
					<top>5</top>
					<width>593</width>
					<height>40</height>
					<align>center</align>
					<label>[B]$INFO[MusicPlayer.Time] / $INFO[MusicPlayer.Duration][/B]</label>
					<font>font_plot</font>
				</control>			
				<control type="progress">
					<left>31</left>
					<top>45</top>
					<width>535</width>
					<info>Player.ProgressCache</info>
					<midtexture>progress_mid.png</midtexture>
					<colordiffuse>$INFO[skin.string(header_color)]</colordiffuse>
				</control>			
				<control type="progress">
					<left>31</left>
					<top>45</top>
					<width>535</width>
					<info>Player.Progress</info>
				</control>									
				<include content="media_flags_common">
					<param name="flagleft" value="2" />
					<param name="flagtop" value="72" />
					<param name="flagwidth" value="140" />
					<param name="flagheight" value="60" />						
					<param name="type" value="record_labels" />
					<param name="condition" value="MusicPlayer.Property(Album_Label)" />
					<param name="visible" value="true" />
				</include>
				<include content="media_flags_music_codec">
					<param name="flagleft" value="160" />
					<param name="flagtop" value="49" />
					<param name="flagwidth" value="110" />
					<param name="flagheight" value="100" />					
					<param name="condition" value="Player.Filename" />
					<param name="visible" value="true" />
				</include>
				<include content="media_flags_common">
					<param name="flagleft" value="304" />
					<param name="flagtop" value="49" />
					<param name="flagwidth" value="110" />
					<param name="flagheight" value="100" />						
					<param name="type" value="audio_channels" />
					<param name="condition" value="MusicPlayer.Channels" />
					<param name="visible" value="true" />
				</include>
				<control type="label">
					<left>434</left>
					<top>87</top>
					<width>420</width>
					<height>30</height>
					<align>center</align>
					<label>[B][COLOR=$INFO[skin.string(header_color)]]$INFO[MusicPlayer.SampleRate,,[/COLOR] KHZ][/B][COLOR=ff505050] | [/COLOR][B][COLOR=$INFO[skin.string(header_color)]]$INFO[MusicPlayer.BitRate,,[/COLOR] Kbps][/B][COLOR=ff505050] | [/COLOR][B][COLOR=$INFO[skin.string(header_color)]]$INFO[MusicPlayer.BitsPerSample,,[/COLOR] Bits][/B]</label>
					<textoffsetx>0</textoffsetx>
				</control>																
			</control>
			<control type="label">
				<left>678</left>
				<top>608</top>
				<width>1192</width>
				<height>45</height>
				<align>right</align>				
				<label>$INFO[MusicPlayer.Artist]</label>
				<font>font_viewtitle</font>
				<scroll>false</scroll>
				<scrollout>false</scrollout>
				<animation effect="fade" end="80" condition="true">Conditional</animation>
			</control>
			<include content="media_flags_rating_stars">
				<param name="flagleft" value="1570" />
				<param name="flagtop" value="672" />
				<param name="condition" value="MusicPlayer.UserRating" />
				<param name="visible" value="Integer.IsGreater(MusicPlayer.UserRating,0.0)" />
			</include>			
			<control type="grouplist">
				<width>1000</width>
				<left>875</left>
				<top>710</top>
				<itemgap>10</itemgap>
				<animation effect="slide" start="0,0" end="0,-30" time="300" tween="sine" easing="inout" condition="!Integer.IsGreater(MusicPlayer.UserRating,0.0)">Conditional</animation>				
				<control type="label">
					<width>1000</width>
					<height>40</height>
					<align>right</align>				
					<label>$INFO[MusicPlayer.Album,, | ]$INFO[MusicPlayer.Year,, | ]$INFO[MusicPlayer.Genre]</label>
					<font>font_list</font>
					<scroll>false</scroll>
					<scrollout>false</scrollout>
				</control>
				<control type="label">
					<width>1000</width>
					<height>40</height>
					<align>right</align>				
					<label>[COLOR=$INFO[skin.string(header_color)]]$INFO[MusicPlayer.TrackNumber,,. ][/COLOR]$INFO[MusicPlayer.Title]</label>
					<font>font_list</font>
					<scroll>false</scroll>
					<scrollout>false</scrollout>
				</control>
			</control>
			<control type="image" id="70041">					
				<left>1470</left>
				<top>810</top>
				<width>400</width>
				<height>80</height>
				<aspectratio align="right" aligny="center">keep</aspectratio>
				<texture background="true">$INFO[Window(home).Property(SkinHelper.Player.Art.ClearArt)]</texture>
				<include>animation_fade</include>
				<visible>!Skin.HasSetting(music_osd_clearlogo_off)</visible>				
			</control>	
			<control type="image" id="70042">					
				<left>1470</left>
				<top>810</top>
				<width>400</width>
				<height>80</height>
				<aspectratio align="right" aligny="center">keep</aspectratio>
				<texture background="true">$INFO[Window(home).Property(SkinHelper.Player.Art.ClearLogo)]</texture>
				<include>animation_fade</include>
				<visible>!Skin.HasSetting(music_osd_clearlogo_off) + String.IsEmpty(Control.GetLabel(70041))</visible>				
			</control>			
			<control type="group">
			<animation effect="slide" start="0,0" end="500,0" time="400" tween="sine" easing="inout" condition="String.IsEmpty(MusicPlayer.offset(1).Artist)">Conditional</animation>
				<control type="label">
					<left>1310</left>
					<top>909</top>
					<width>410</width>
					<height>30</height>
					<align>right</align>				
					<label>[COLOR=$INFO[skin.string(header_color)]]$INFO[MusicPlayer.offset(1).TrackNumber,,. ][/COLOR]$INFO[MusicPlayer.offset(1).Title]</label>
					<font>font_plot</font>
					<scroll>true</scroll>
					<scrollout>false</scrollout>
				</control>
				<control type="label">
					<left>1310</left>
					<top>939</top>
					<width>410</width>
					<height>30</height>
					<align>right</align>				
					<label>$INFO[MusicPlayer.offset(1).Artist]</label>
					<font>font_plot</font>
					<scroll>true</scroll>
					<scrollout>false</scrollout>
				</control>
				<control type="label">
					<left>1568</left>
					<top>1015</top>
					<width>120</width>
					<height>30</height>
					<align>right</align>
					<label>$LOCALIZE[31525]</label>
					<font>font_button</font>
					<textcolor>$INFO[skin.string(header_color)]</textcolor>
					<scroll>false</scroll>
					<scrollout>false</scrollout>
				</control>
				<control type="image">
					<left>1695</left>
					<top>1015</top>
					<width>30</width>
					<height>30</height>
					<aspectratio align="right" aligny="bottom">keep</aspectratio>
					<texture colordiffuse="$INFO[skin.string(texture_color_highlight)]">arrow_right.png</texture>				
				</control>			
				<control type="image">
					<left>1736</left>
					<top>907</top>
					<width>136</width>
					<height>136</height>
					<fadetime>200</fadetime>
					<aspectratio align="left" aligny="bottom">keep</aspectratio>
					<texture fallback="DefaultAudio.png">$INFO[MusicPlayer.offset(1).Cover]</texture>	
					<bordertexture border="-6">thumb_shadow.png</bordertexture>
					<bordersize>2</bordersize>				
				</control>
			</control>
		</control>
	</controls>
</window>