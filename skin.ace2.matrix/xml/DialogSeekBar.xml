<?xml version="1.0" encoding="UTF-8"?>
<window><!-- Ace 2 -->
	<defaultcontrol>23</defaultcontrol>
		<visible>[Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)] + ![Window.IsActive(videoosd) | Window.IsActive(musicosd) | Window.IsActive(fullscreeninfo) | Window.IsActive(osdvideosettings) | Window.IsActive(osdaudiosettings) | Window.IsActive(subtitlesearch) | Window.IsActive(playerprocessinfo)] + [Player.Seeking | !String.IsEmpty(Player.SeekNumeric) | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding]</visible>	
	<controls>
		<control type="group">
			<animation effect="slide" start="0,1400" end="0,0" time="550" easing="out" tween="sine">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,1400" time="400" easing="in" tween="sine">WindowClose</animation>
			<visible>Player.HasVideo + !Skin.HasSetting(video_osd_furniture_off) | Player.HasAudio + !Skin.HasSetting(music_osd_furniture_off)</visible>
			<include content="osd_seek_forward">	
				<param name="top" value="963" />
			</include>
			<include content="osd_seek_rewind">	
				<param name="top" value="958" />
			</include>
			<control type="image">
				<top>979</top>
				<width>1920</width>
				<height>78</height>
				<texture colordiffuse="$INFO[skin.string(texture_color_base)]">dialog_seekbar_progress_back.png</texture>
				<include>animation_visible_change</include>
				<visible>!Player.Seeking</visible>
			</control>
			<control type="image">
				<top>979</top>
				<width>1920</width>
				<height>78</height>
				<texture colordiffuse="$INFO[skin.string(texture_color_highlight)]">dialog_seekbar_progress_back.png</texture>
				<include>animation_visible_change</include>
				<visible>Player.Seeking</visible>
			</control>
			<control type="image">
				<top>1040</top>
				<width>1920</width>
				<height>40</height>
				<texture colordiffuse="$INFO[skin.string(texture_color_base)]">white80.png</texture>
			</control>
			<control type="image">
				<top>979</top>
				<width>1920</width>
				<height>78</height>
				<texture colordiffuse="$INFO[skin.string(texture_color_base)]">dialog_seekbar_back.png</texture>
			</control>
			<control type="image">
				<top>979</top>
				<width>1920</width>
				<height>78</height>
				<texture>dialog_seekbar_border.png</texture>
			</control>
			<control type="progress">
				<left>50</left>
				<top>1012</top>
				<width>971</width>
				<height>18</height>
				<info>Player.ProgressCache</info>
				<midtexture>progress_mid.png</midtexture>
			</control>			
			<control type="progress" id="23">
				<left>50</left>
				<top>1012</top>
				<width>971</width>
				<height>18</height>
				<info>Player.Progress</info>
			</control>
			<control type="label">
				<left>1120</left>
				<top>998</top>
				<width>750</width>
				<height>40</height>
				<align>right</align>
				<label>$VAR[osd_time_duration]</label>
				<font>font_plot</font>
			</control>
			<control type="label">
				<left>50</left>
				<top>1040</top>
				<width>400</width>
				<height>40</height>
				<label>$VAR[osd_endsat]</label>
				<font>font_plot</font>	
			</control>
			<control type="label">
				<left>559</left>
				<top>1040</top>
				<width>800</width>
				<height>40</height>
				<align>center</align>
				<label>$VAR[osd_seek_info] $VAR[osd_seek_label]</label>
			</control>
		</control>		
		<include content="pause_label">	
			<param name="top" value="320" />
		</include>
	</controls>
</window>