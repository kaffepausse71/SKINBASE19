            </itemlayout>
            <focusedlayout height="1080" width="1920">
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>1920</width>
                    <height>1080</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[ListItem.Art(original)]</texture>
                </control>
            </focusedlayout>
        </control>
        <control type="button">
            <posx>1720</posx>
            <posy>200</posy>
            <width>200</width>
            <height>800</height>
            <include>HiddenButton</include>
