            <posx>0</posx>
            <posy>200</posy>
            <width>200</width>
            <height>800</height>
            <include>HiddenButton</include>
            <onclick>Control.Move(5000,-1)</onclick>
        </control>
        <include content="WindowClosingButton">
            <param name="id" value="99010"/>
            <param name="x" value="1870"/>
            <param name="y" value="0"/>
            <param name="onleft" value="6060"/>
        </include>
    </controls>
