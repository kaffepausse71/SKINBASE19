<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3110</defaultcontrol>
    <menucontrol>9000</menucontrol>
    <controls>
        <include>DimBG</include>
        <control type="group">
            <include>DialogOpenClose</include>
            <!-- background panel -->
            <control type="image">
                <posx>0</posx>
                <posy>140</posy>
                <width>1920</width>
                <height>1080</height>
                <!--<include>DialogTransparency</include>-->
                <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
                <texture border="50">common/background_menu.png</texture>
            </control>
            <include content="WindowClosingButton">
                <param name="id" value="99010"/>
                <param name="x" value="1870"/>
                <param name="y" value="140"/>
                <param name="onleft" value="6060"/>
            </include>
            <control type="image">
                <posx>530</posx>
                <posy>190</posy>
                <width>480</width>
                <height>900</height>
                <texture border="1">common/background_strip_horizontal_right.png</texture>
            </control>
            <!-- SIDE MENU -->
            <control type="group">
                <posy>240</posy>
                <control type="grouplist" id="9000">
                    <posy>0</posy>
                    <height>800</height>
                    <include>DialogMenuButtonGroup</include>
                    <ondown>9000</ondown>
                    <onright>3110</onright>
                    <!--current color name-->
                    <control type="button" id="3030">
                        <visible>!String.IsEmpty(Window.Property(palettename))</visible>
                        <onright>3110</onright>
                        <label>$ADDON[script.skin.helper.colorpicker 32141]: $INFO[Window.Property(palettename)]</label>
                        <include>DialogMenuButton</include>
                    </control>
                    <control type="label" id="7895">
                        <height>50</height>
                        <width>480</width>
                        <label></label>
                    </control>
                    <!-- color preview-->
                    <control type="image" id="7896">
                        <animation effect="slide" start="0,0" end="50,0" time="0" condition="true">conditional</animation>
                        <posx>0</posx>
                        <width>380</width>
                        <height>100</height>
                        <texture>common/WhiteDot.png</texture>
                        <colordiffuse>$INFO[Window.Property(colorstring)]</colordiffuse>
                        <include>DialogMenuButton</include>
                    </control>
                    <control type="label" id="7897">
                        <height>50</height>
                        <width>480</width>
                        <label></label>
                    </control>
                    <!-- edit manual -->
                    <control type="button" id="3010">
                        <onright>3110</onright>
                        <label>$ADDON[script.skin.helper.colorpicker 32012]</label>
                        <label2>$INFO[Window.Property(colorstring)]</label2>
                        <include>DialogMenuButton</include>
                    </control>
                    <control type="label" id="7898">
                        <include>TextColor_MainColor</include>
                        <label>$INFO[Window.Property(colorname)]</label>
                        <include>DialogMenuButton</include>
                    </control>
                    <control type="label" id="7899">
                        <height>400</height>
                        <width>480</width>
                        <label></label>
                    </control>
                    <!-- Save button -->
                    <control type="button" id="3012">
                        <onright>3110</onright>
                        <label>190</label>
                        <include>DialogMenuButton</include>
                    </control>
                </control>
            </control>
            <control type="group">
                <posx>530</posx>
                <posy>240</posy>
                <control type="label">
                    <posx>TextMargin</posx>
                    <posy>0</posy>
                    <width>760</width>
                    <height>50</height>
                    <font>InfoTitleFont</font>
                    <include>TextColor_MainColor</include>
                    <scroll>true</scroll>
                    <label>$ADDON[script.skin.helper.colorpicker 32011]</label>
                </control>
                <control type="panel" id="3110">
                    <viewtype label="31438">icons</viewtype>
                    <posx>50</posx>
                    <posy>100</posy>
                    <width>1290</width>
                    <height>700</height>
                    <orientation>vertical</orientation>
                    <onleft>9000</onleft>
                    <onright>60</onright>
                    <onup>3110</onup>
                    <ondown>3110</ondown>
                    <preloaditems>4</preloaditems>
                    <pagecontrol>60</pagecontrol>
                    <itemlayout height="70" width="69">
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>69</width>
                            <height>70</height>
                            <texture>$INFO[ListItem.Icon]</texture>
                        </control>
                    </itemlayout>
                    <focusedlayout height="70" width="69">
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>69</width>
                            <height>70</height>
                            <texture>$INFO[ListItem.Icon]</texture>
                        </control>
                        <control type="image">
                            <posx>24</posx>
                            <posy>24</posy>
                            <width>22</width>
                            <height>22</height>
                            <texture>common/BlackDot.png</texture>
                            <aspectratio>stretch</aspectratio>
                        </control>
                        <control type="image">
                            <posx>25</posx>
                            <posy>25</posy>
                            <width>20</width>
                            <height>20</height>
                            <texture>common/WhiteDot.png</texture>
                            <aspectratio>stretch</aspectratio>
                        </control>
                    </focusedlayout>
                </control>
                <control type="scrollbar" id="60">
                    <posx>1290</posx>
                    <posy>100</posy>
                    <height>700</height>
                    <include>VerticalScroller</include>
                    <onleft>3110</onleft>
                    <onright>60</onright>
                </control>
            </control>
        </control>
    </controls>
</window>
