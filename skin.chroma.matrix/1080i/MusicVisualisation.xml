                                <orientation>horizontal</orientation>
                                <align>left</align>
                                <aligny>center</aligny>
                                <include>CodecsMusicOSD</include>
                            </control>
                        </control>
                        <control type="group">
                            <posx>1010</posx>
                            <control type="label">
                                <posx>0</posx>
                                <posy>0</posy>
                                <width>380</width>
                                <height>50</height>
                                <font>InfoDetailsFont</font>
                                <include>TextColor_MainColor</include>
                                <scroll>true</scroll>
                                <label>$VAR[DetailsRow1]</label>
                            </control>
                            <control type="label">
                                <posx>0</posx>
