                                <posx>0</posx>
                                <posy>10</posy>
                                <width>810</width>
                                <height>270</height>
                                <font>InfoPlotFont</font>
                                <textcolor>AlternateColor</textcolor>
                                <label fallback="19055">$INFO[MusicPlayer.Property(Artist_Description)]</label>
                                <include>myautoscroll</include>
                            </control>
                            <control type="grouplist">
                                <posx>0</posx>
                                <posy>325</posy>
                                <width>1006</width>
                                <height>90</height>
